{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "lang",
    "patterns": [
        {
            "include": "#multiline_comment"
        },
        {
            "include": "#percent_highlight"
        },
        {
            "include": "#comment"
        },  
        {
            "include": "#keys"
        },
        {
            "include": "#keyword_embedding"
        },
        {
            "include": "#color_definition"
        },
        {
            "include": "#numbers"
        },
        {
            "include": "#general_strings"
        }
    ],
    "repository": {
        "keys": {
            "name": "variable",
            "match": "^([A-Za-z_.][A-Za-z0-9_.]*)(?=\\s*[=:])"
        },
        "keyword_embedding": {
            "name": "variable",
            "match": "\\${.*[A-Za-z_.][A-Za-z0-9_.]}"
        },
        "comment": {
            "name": "comment.line",
            "match": "#.*$"
        },
        "multiline_comment": {
            "name": "comment.block",
            "begin": "#->",
            "end": "<-#"
        },
        "numbers": {
            "name": "constant.numeric.lang",
            "match": "-?[0-9]+(\\.[0-9]+)?"
        },
        "general_strings": {
            "name": "string.general.lang",
            "match": "[^[:space:]0-9=:=]+"
        },
        "color_definition": {
            "name": "constant.numeric",
            "match": "(ยง|&)([0-9abkmocdeflnr]).*$"
        },
        "percent_highlight": {
            "name": "constant.numeric",
            "match": "%[a-z]?"
        }
    },
    "scopeName": "source.lang",
    "uuid": "134c94b9-34c9-4a39-a1c7-175de74bf6e0"
}